<record id="security_scan_form_view" model="ir.ui.view">
    <field name="name">security.scan.form</field>
    <field name="model">security.scan</field>
    <field name="arch" type="xml">
        <form string="Odoo Security Scanner">
            <header>
                <button name="run_scan"
                        string="Run Scan"
                        type="object"
                        class="oe_highlight"
                        modifiers='{
                            "invisible": [["running_scan", "=", true]],
                            "readonly": [["scan_completed", "=", true]]
                        }'/>
                <field name="progress" widget="progressbar"
                       modifiers='{"invisible": [["running_scan", "=", false]]}'/>
            </header>
            <sheet>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="scan_date" readonly="1"/>
                        <field name="verbose_mode"/>
                    </group>
                </group>

                <group string="Security Checks">
                    <field name="master_password_set"/>
                    <field name="https_enabled"/>
                    <field name="access_rules_defined"/>
                    <field name="log_file_present"/>
                    <field name="db_filter_set"/>
                    <field name="db_listing_disabled"/>
                </group>

                <group string="Scan Results">
                    <field name="notes" colspan="4" nolabel="1"/>
                </group>
            </sheet>
        </form>
    </field>
</record>
